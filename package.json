{
  "name": "@ikilote/magma-demo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:lib": "ng build @ikilote/magma --configuration production && cp *.md dist/ikilote/magma",
    "build:demo": "ng build magma-demo --configuration production && cp -r coverage dist/magma-demo/browser",
    "publish:lib": "cd dist/ikilote/magma && npm publish ",
    "watch": "ng build --watch --configuration development",
    "lint": "ng lint @ikilote/magma",
    "format": "npx prettier --write .",
    "test": "ng test",
    "test:lib": "export CHROME_BIN=chromium && ng test @ikilote/magma",
    "update-coverage-badges": "node scripts/update-coverage-badges.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.1",
    "@angular/cdk": "^21.0.1",
    "@angular/common": "^21.0.1",
    "@angular/compiler": "^21.0.1",
    "@angular/core": "^21.0.1",
    "@angular/forms": "^21.0.1",
    "@angular/platform-browser": "^21.0.1",
    "@angular/platform-browser-dynamic": "^21.0.1",
    "@angular/router": "^21.0.1",
    "@ikilote/json2html": "^1.0.0",
    "@ikilote/num-formatter": "^1.0.0",
    "autosize": "^6.0.1",
    "bowser": "^2.13.0",
    "colorjs.io": "^0.5.2",
    "highlight.js": "11.11.1",
    "marked": "^17.0.1",
    "ng-select2-component": "^17.2.7",
    "ngx-highlightjs": "14.0.1",
    "ngx-markdown": "^21.0.0",
    "prismjs": "^1.30.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.1",
    "@angular/cli": "^21.0.1",
    "@angular/compiler-cli": "^21.0.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/autosize": "^4.0.3",
    "@types/jasmine": "~5.1.0",
    "cheerio": "^1.1.2",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^21.0.0",
    "prettier": "^3.3.3",
    "prettier-plugin-css-order": "^2.1.2",
    "typescript": "~5.9.3"
  }
}
